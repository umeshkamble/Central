<?xml version="1.0" encoding="utf-8" ?>
<temp:PayEditV xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:temp="clr-namespace:Central.App.Templates"
               x:Class="Central.App.Templates.PayCekEditV">
    
    <temp:PayEditV.BodyPay>
        <Grid
            RowSpacing="0"
            ColumnSpacing="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--InputKasBank-->
            <temp:InputPickerV
                Grid.Row="0"    
                BindingContext="{Binding PnInputKasBankVM}"/>

            <!--InputTglCek-->
            <temp:InputDateV
                Grid.Row="1"    
                BindingContext="{Binding PnInputTglCekVM}"/>
            
            <!--InputNamaPenerima-->
            <temp:InputText3V
                Grid.Row="2"    
                BindingContext="{Binding PnInputNamaPenerimaVM}"/>
        </Grid>
    </temp:PayEditV.BodyPay>
</temp:PayEditV>