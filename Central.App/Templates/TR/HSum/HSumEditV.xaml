<?xml version="1.0" encoding="utf-8" ?>
<temp:HSumT xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:temp="clr-namespace:Central.App.Templates"
             x:Class="Central.App.Templates.HSumEditV">

    <temp:HSumT.Body>
        <Grid
            RowSpacing="0"
            ColumnSpacing="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--SubTotal-->
            <temp:InputText3V
                Grid.Row="0"
                BindingContext="{Binding PnInputSubTotalVM}"/>

            <!--DiskonFakturPersen-->
            <temp:InputText3V
                Grid.Row="1"
                BindingContext="{Binding PnInputDiskonFakturPersenVM}"/>

            <!--DiskonFaktur-->
            <temp:InputText3V
                Grid.Row="2"
                BindingContext="{Binding PnInputDiskonFakturVM}"/>
        </Grid>
    </temp:HSumT.Body>
    
    
</temp:HSumT>