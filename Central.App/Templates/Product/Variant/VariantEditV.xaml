<?xml version="1.0" encoding="utf-8" ?>
<temp:VariantT  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:temp="clr-namespace:Central.App.Templates"
                x:Class="Central.App.Templates.VariantEditV">

    <temp:VariantT.Body>
        <Grid
            RowSpacing="0"
            ColumnSpacing="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Nama-->
            <temp:InputText1V
                Grid.Row="0"
                BindingContext="{Binding PnInputNamaVM}"/>

            <!--Deskripsi-->
            <temp:InputText2V
                Grid.Row="1"
                BindingContext="{Binding PnInputDeskripsiVM}"/>
        </Grid>
    </temp:VariantT.Body>
    
    
</temp:VariantT>