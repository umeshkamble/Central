                  xmlns:view="clr-namespace:Central.App.Views"
                  x:Class="Central.App.Views.PageFilterPayV">

    <view:PageFilterV.BodyFilter>
        <Grid RowSpacing="0" ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <view:PanelList2V
                Grid.Row="0"
                BindingContext="{Binding CityListVM}"/>

            <!--BodyFilterPayContent-->
            <ContentView 
                Grid.Row="1"    
                x:Name="BodyFilterPayContent"/>
        </Grid>
    </view:PageFilterV.BodyFilter>
</view:PageFilterV>