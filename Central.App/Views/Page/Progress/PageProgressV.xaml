<?xml version="1.0" encoding="utf-8" ?>
<view:PageV xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:view="clr-namespace:Central.App.Views"
            xmlns:temp="clr-namespace:Central.App.Templates"
            x:Class="Central.App.Views.PageProgressV">
    <view:PageV.Body>
        <Grid>
            <temp:ImageV
                x:Name="img1"
                Source="progress.gif"
                Aspect="AspectFit"
                Margin="50"
                IsAnimationPlaying="{Binding IsPlayingGif}"/>
            
            <temp:LabelTitleV
                FontFamily="FontTitle"
                FontSize="Medium"
                TextColor="Gray"
				Margin="0,100,0,0"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Text="Please wait..."/>
        </Grid>
        
    </view:PageV.Body>
    
</view:PageV>