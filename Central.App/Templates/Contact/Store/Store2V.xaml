<?xml version="1.0" encoding="utf-8" ?>
<temp:StoreT xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:temp="clr-namespace:Central.App.Templates"
             xmlns:view="clr-namespace:Central.App.Views"
             x:Class="Central.App.Templates.Store2V">

    <temp:StoreT.Body>
        <HorizontalStackLayout>
            <!--No-->
            <temp:LabelHintV
                HorizontalOptions="Start"
                WidthRequest="20"
                TextColor="{Binding PnTextColor1}"
                Text="{Binding PnNo}"/>

            <!--Title-->
            <VerticalStackLayout
                WidthRequest="1000"
                HorizontalOptions="StartAndExpand">

                <temp:LabelHintV
                    FontSize="Medium"
                    TextColor="{Binding PnTextColor1}"
                    Text="{Binding PnNama}"/>

                <temp:LabelHintV
                    FontSize="Micro"
                    TextColor="{Binding PnTextColor1}"
                    Text="{Binding PnKota}"/>

            </VerticalStackLayout>
        </HorizontalStackLayout>
    </temp:StoreT.Body>
    
    
</temp:StoreT>