<?xml version="1.0" encoding="utf-8" ?>
<temp:PayTransferT  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:temp="clr-namespace:Central.App.Templates"
                x:Class="Central.App.Templates.PayTransfer1V">

    <temp:PayTransferT.Body>
        <Grid
            RowSpacing="0"
            ColumnSpacing="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!--Nama-->
            <temp:LabelHintV
                Grid.Row="0"
                Grid.Column="0"
                TextColor="{Binding PnTextColor1}"
                Text="{Binding PnNama}"/>

            <!--Deskripsi-->
            <temp:LabelHintV
                Grid.Row="1"
                Grid.Column="0"
                FontSize="Micro"
                TextColor="{Binding PnTextColor1}"
                Text="{Binding PnDeskripsi2}"/>
        </Grid>
    </temp:PayTransferT.Body>
    
    
</temp:PayTransferT>